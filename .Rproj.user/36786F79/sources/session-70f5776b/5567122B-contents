library(ggeffects)
library(ggplot2)

plot_H2 <- ggpredict(
  m_H2,
  terms = c("cohesion_c [-1:1 by=0.1]", "group", "target"),
  type = "response"
)

ggplot(plot_H2, aes(x = x, y = predicted, color = group)) +
  geom_line(linewidth = 1.1) +
  geom_ribbon(aes(ymin = conf.low, ymax = conf.high, fill = group),
              alpha = 0.15, color = NA) +
  facet_wrap(~target, nrow = 1) +
  coord_cartesian(ylim = c(0, 1)) +
  labs(
    title = "H2: Cohesion × Group × Target Interaction",
    subtitle = "Higher cohesion strengthens positive-norm effect in climate trials",
    x = "Social Cohesion (centered)",
    y = "Predicted Probability of High-Effort Choice",
    color = "Group",
    fill = "Group"
  ) +
  theme_minimal(base_size = 12) +
  theme(legend.position = "bottom") +
  scale_color_brewer(palette = "Set1") +
  scale_fill_brewer(palette = "Set1")
